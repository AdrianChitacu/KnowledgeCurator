<!DOCTYPE HTML>
<html lang="en">
<script src="/jquery/jquery.js"></script>
<script src="/bootstrap/js/bootstrap.js"></script>
<script src="/tinymce/tinymce.js"></script>
<script src="/js/app.js"></script>
<link href="/bootstrap/css/bootstrap.css" rel="stylesheet">
<link href="/css/app.css" rel="stylesheet">

<head>
    <meta charset=UTF-8>
    <title>Form Page</title>
</head>

<body>
    <div id="main-container">
        <%- include('logo.ejs') %>
            <br />
            <br />
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <form id="edit-form" action="/result/formSubmit?id=<%=id%>" method="post">
                        <div class="form-group">
                            <div class="form-group">
                                <label for="edit-title" class="col-form-label col-form-label-lg">Title</label>
                                <input id="edit-title" class="form-control form-control-lg" placeholder="Document Title"
                                    value="<%=title%>" name="title" />
                            </div>
                            <br />
                            <br />
                            <div class="form-group">
                                <label for="edit-keywords" class="col-form-label col-form-label-lg">Keywords</label>
                                <input id="edit-keywords" class="form-control form-control-lg"
                                    placeholder="Document Keywords" value="<%=keywords%>" name="keywords" />
                            </div>
                            <br />
                            <br />
                            <div class="form-group">
                                <label for="edit-text-area" class="col-form-label col-form-label-lg">Details</label>
                                <textarea id="edit-text-area" name="documentText" placeholder="Details"><%=documentText%></textarea>
                            </div>
                            <br />
                            <br />
                            <div class="row align-items-center">
                                <button id="edit-submit" type="submit" class="btn btn-primary">Curate</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
    </div>
</body>

</html>